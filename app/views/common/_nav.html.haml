.sb-slidebar.sb-right.sb-style-overlay
  %header.text-center
    .logo
      = link_to root_path, class: 'no-decoration', data: { no_turbolink: true } do
        %i.fa.fa-bus

  %nav.text-center
    %ul.list-unstyled
      %li
        = link_to t('buses.name'), apb_path, class: 'no-decoration', data: { no_turbolink: true }
      %li
        = link_to t('oranges.name'), orange_path, class: 'no-decoration', data: { no_turbolink: true }
      %li
        = link_to t('about'), about_path, class: 'no-decoration', data: { no_turbolink: true }
      - if params[:controller] != 'index'
        %li
          %h4
            = link_to t('back_home'), root_path, class: 'no-decoration', data: { no_turbolink: true }